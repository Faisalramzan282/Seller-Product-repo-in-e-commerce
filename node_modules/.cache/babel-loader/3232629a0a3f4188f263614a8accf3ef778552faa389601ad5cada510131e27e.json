    \r\n      \r\n    }, \r\n    data(){\r\n        return{ \r\n           savedPrice: this.task.price\r\n        }\r\n    },\r\n    methods:{\r\n        ...mapActions({cartsCoun: 'cartsCount'}),\r\n        removeCart(idx)\r\n        {\r\n            this.carts.splice(idx, 1);\r\n        },\r\n        plusCount(task){\r\n\r\n          this.cartsCoun(task);\r\n          \r\n        },\r\n        minusCount(idx)\r\n        {\r\n          this.carts.splice(idx, 1);\r\n        }, \r\n        \r\n        \r\n    }, \r\n   \r\n\r\n}\r\n\r\n</script>\r\n<style>\r\n\r\n  @media screen and (max-width: 640px) {\r\n  .specific-width{\r\n    width: 98%;\r\n  \r\n  }\r\n}\r\n\r\n\r\n</style>"],"mappings":"AA8DA,SAASA,UAAU,EAAEC,UAAS,QAAS,MAAM;AAC7C,eAAc;EAEVC,IAAI,EAAE,WAAW;EACjBC,QAAQ,EAAC;IACL,GAAGH,UAAU,CAAC;MAACI,KAAK,EAAE;IAAU,CAAC,CAAC;IAElCC,UAAUA,CAAA,EAAE;MACV,IAAIC,QAAO,GAAI,SAAS;MACzB,IAAIC,UAAS,GAAI,IAAI,CAACH,KAAK,CAACI,MAAM,CAAC,CAACC,KAAK,EAAEL,KAAK,KAAKK,KAAI,GAAIL,KAAK,CAACM,KAAK,EAAE,CAAC,CAAC;MAC5E,IAAGH,UAAS,KAAM,CAAC,EACnB;QACC,OAAOA,UAAU;MAClB,OACI;QACH,OAAOD,QAAQ;MAChB;IAED;EAGJ,CAAC;EACDK,IAAIA,CAAA,EAAE;IACF,OAAM;MACHC,UAAU,EAAE,IAAI,CAACC,IAAI,CAACH;IACzB;EACJ,CAAC;EACDI,OAAO,EAAC;IACJ,GAAGb,UAAU,CAAC;MAACc,SAAS,EAAE;IAAY,CAAC,CAAC;IACxCC,UAAUA,CAACC,GAAG,EACd;MACI,IAAI,CAACb,KAAK,CAACc,MAAM,CAACD,GAAG,EAAE,CAAC,CAAC;IAC7B,CAAC;IACDE,SAASA,CAACN,IAAI,EAAC;MAEb,IAAI,CAACE,SAAS,CAACF,IAAI,CAAC;IAEtB,CAAC;IACDO,UAAUA,CAACH,GAAG,EACd;MACE,IAAI,CAACb,KAAK,CAACc,MAAM,CAACD,GAAG,EAAE,CAAC,CAAC;IAC3B;EAGJ;AAGJ"},"metadata":{},"sourceType":"module","externalDependencies":[]}